<h1><%= @user.full_name %></h1>
<h2><%= @user.alumni.name %></h2>
<div class="row-fluid">
  <div class="span2">
    <img src="http://placehold.it/150x150" />
  </div>
  <div class="span10">
    <p>Current Location &mdash; <%= @user.location %></p>
    <p><%= @user.about %></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <h2>Code for America Accomplishments</h2>
    <p><%= @user.accomplishments %></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <h2>How has your Code for America experience impacted your life?</h2>
    <p><%= @user.impact %></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <h2>Current</h2>
    <p><%= @user.current %></p>
  </div>
</div>
<div class="row-fluid">
  <h2>Contact</h2>
  <div class="span12">
    <p><i class="icon-github"></i>&nbsp;<%= @user.github %></p>
    <p><i class="icon-twitter"></i>&nbsp;<%= @user.twitter %></p>
    <p><i class="icon-linkedin"></i>&nbsp;<%= @user.linkedin %></p>
  </div>
</div>
