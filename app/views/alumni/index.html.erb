<div class="container-fluid">
<h1>Code for America Alumni</h1>

  <div class="row-fluid">
    <div class="span12">
      <% @alumni.each do |alumni| %>
        <h2><%= link_to pluralize_alumni(alumni.name), alumni_show_path(alumni) %></h2>
        <% if alumni.image_link.nil? %>
          <%= image_tag 'madison.jpg' %>
        <% else %>
          <%= link_to image_tag(alumni.image_link), alumni_show_path(alumni) %>
        <% end %>
        <p><%= alumni.description %></p>
        <% end %>
    </div>
  </div>
</div>
