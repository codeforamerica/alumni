<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :event_date %>
    <%= f.input :location %>
    <%= f.input :description, :input_html => {:rows => 4, :class => "span7"}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
